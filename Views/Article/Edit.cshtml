@model QuanLyBaiBaoKhoaHoc.Models.ArticleEditViewModel

@{
    ViewData["Title"] = "Chỉnh sửa bài viết";
}

<h2 class="text-center mb-4">Chỉnh sửa bài viết</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Article.ArticleId" />

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="form-group mb-3">
        <label asp-for="Article.Title" class="form-label"></label>
        <input asp-for="Article.Title" class="form-control" />
        <span asp-validation-for="Article.Title" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Article.Summary" class="form-label"></label>
        <textarea asp-for="Article.Summary" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Article.Summary" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Article.Content" class="form-label"></label>
        <textarea asp-for="Article.Content" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Article.Content" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Chủ đề</label>
        @foreach (var topic in Model.Topics)
        {
            <div class="form-check">
                <input type="checkbox"
                       class="form-check-input"
                       name="SelectedTopicIds"
                       value="@topic.Value"
                       id="topic_@topic.Value"
                @(Model.SelectedTopicIds.Contains(int.Parse(topic.Value)) ? "checked" : "") />
                <label class="form-check-label" for="topic_@topic.Value">
                    @topic.Text
                </label>
            </div>
        }
        <span asp-validation-for="SelectedTopicIds" class="text-danger"></span>
    </div>

    @if (Context.Session.GetString("Role") == "Admin")
    {
        <div class="form-group mb-3">
            <label asp-for="Article.Status" class="form-label"></label>
            <select asp-for="Article.Status" class="form-control" asp-items="Html.GetEnumSelectList<ArticleStatus>()"></select>
            <span asp-validation-for="Article.Status" class="text-danger"></span>
        </div>
    }
    else
    {
        <input type="hidden" asp-for="Article.Status" />
    }


    <div class="form-group mt-4">
        <button type="submit" class="btn btn-success w-100">Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Quay lại</a>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
